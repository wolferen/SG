<!DOCTYPE html>
<html>
<head>
  <title>Courses</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href=/>SG cources</a>
      <a class="navbar-brand" href=/posts>SG post</a>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <div id="user_nav">
        <% if current_user  %>
        <ul class='nav navbar-nav navbar-link navbar-right'>
          <p class='navbar-text'> Logged in as <%= current_user.username %></p>
          <li><%= link_to "Log out", log_out_path %></li>
        </ul>
        <% else %>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="sign_up">Sign up</a></li>
            <li><a href="log_in">Log in</a></li>
        </ul>
        <% end %>
      </div>
    </div>
  </div>
</nav>
<% if notice %>
  <div class="alert alert-info" role="alert" id="alert">
    <p class='notice', align='center'><%= notice %></p>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-danger" role="alert" id="alert">
    <p class='alert', align='center'><%= alert %></p>
  </div>
<% end %>
<div class='container'>
<%= yield %>
</nav>
</body>
</html>
